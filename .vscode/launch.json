{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "launch with nodemon and ts-node",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
